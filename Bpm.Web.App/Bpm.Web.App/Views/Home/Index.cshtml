<div class="jumbotron">
    <h1 class="text-center ng-cloak bpm">{{app.currentTrack.bpm}}</h1>
    <p>
        <button class="btn-lg btn-calc text-center block full-width" 
           ng-click="app.calculateBpm()">Calculate</button>
    </p>
    <p>
        <button class="btn-lg btn-reset text-center block full-width"
           ng-click="app.reset()">Reset</button>
    </p>
</div>


    <form>
        <div class="form-group">
            <input type="text" class="form-control block full-width input-lg" id="track" placeholder="Track name" ng-model="app.currentTrack.name">
        </div>

        <button type="submit" class="btn-lg btn-save block full-width" 
                ng-click="app.saveTrack()" 
                ng-disabled="app.currentTrack.bpm === '- - -' || app.currentTrack.name === ''">Save</button>
    </form>

<hr/>
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Bpm</th>
            <th>Name</th>
            <th>Options</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="track in app.savedTracks track by track.id" class="ng-cloak">
            <td>{{track.bpm}}</td>
            <td>{{track.name}}</td>
            <td>
                <span class="glyphicon glyphicon-trash pointer" title="Delete"
                      ng-click="app.removeTrack(track.id)">
                </span>
                <span class="glyphicon glyphicon-refresh pointer" title="Update"
                      ng-click="app.modifyTrack(track)">
                </span>
                <span class="glyphicon glyphicon-menu-up pointer" title="Move Up"
                      @*ng-show="$index !== 0"*@
                      ng-click="app.moveUp(track)">
                </span>
                <span class="glyphicon glyphicon-menu-down pointer" title="Move Down"
                      @*ng-show="$index !== app.savedTracks.length - 1"*@
                      ng-click="app.moveDown(track)">
                </span>
            </td>
        </tr>
        </tbody>
    </table>
